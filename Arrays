// create loop and find smallest and largest number -------------------------------------------

-- code start ----

#include <iostream>

int main() 
{
  std::cout << "Hello World!\n"; 
  int arr[] = {7,3,4,5,6,6};
  int smallest = arr[0];
  for (int i=0;i<sizeof(arr)/sizeof(arr[0]);i++){
    std::cout << arr[i]<< std::endl;
    if(arr[i]<smallest){
      smallest= arr[i];
    }
  }
  std::cout << "The smallest number is: " << smallest << std::endl;
}


---- code end ----
